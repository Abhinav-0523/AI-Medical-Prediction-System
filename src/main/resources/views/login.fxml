<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medpred.controllers.LoginController">
    <left>
        <VBox spacing="20" alignment="CENTER" styleClass="card">
            <padding><Insets top="50" left="50" right="50" bottom="50"/></padding>
            <Label text="AI Medical Prediction" styleClass="title"/>
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <Label fx:id="errorLabel" textFill="red"/>
            <Button text="Login" onAction="#handleLogin"/>
        </VBox>
    </left>
    <center>
        <StackPane style="-fx-background-color: linear-gradient(to bottom right, #1972ccff, #d61e1eff);">
            <Label text="🏥" style="-fx-font-size: 80px;"/>
        </StackPane>
    </center>
</BorderPane>
