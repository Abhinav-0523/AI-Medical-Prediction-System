<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medpred.controllers.DashboardController">

    <top>
        <ToolBar>
            <Label text="AI Medical Prediction System" style="-fx-font-weight: bold;"/>
            <Button text="New Patient" onAction="#openPatientForm"/>
            <Button text="View Predictions" onAction="#openPredictions"/>
            <Button text="Logout" onAction="#logout"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="30" alignment="CENTER" style="-fx-padding: 30;">
            <Label text="Welcome to AI Medical Prediction System" styleClass="title"/>
            <Button text="Start Patient Prediction" onAction="#openPatientForm"/>
        </VBox>
    </center>

</BorderPane>
